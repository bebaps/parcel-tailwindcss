{
  "name": "parcel-tailwindcss",
  "version": "1.0.0",
  "description": "A starting point for using Parcel with Tailwindcss.",
  "main": "index.html",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bebaps/parcel-tailwindcss.git"
  },
  "bugs": {
    "url": "https://github.com/bebaps/parcel-tailwindcss/issues"
  },
  "homepage": "https://github.com/bebaps/parcel-tailwindcss#readme",
  "author": {
    "name": "Alexander Persky",
    "email": "info@alexanderpersky.com",
    "url": "https://www.alexanderpersky.com"
  },
  "scripts": {
    "parcel:dev": "parcel index.html",
    "parcel:build": "parcel build index.html --no-source-maps",
    "parcel:watch": "parcel watch index.html",
    "clean": "rm -rf dist .cache",
    "dev": "run-s clean parcel:dev",
    "watch": "run-s clean parcel:watch",
    "build": "run-s clean parcel:build",
    "lint:css": "stylelint --fix src/css/**/*.css",
    "lint:js": "eslint src/js/**/*.js"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "eslint": "^6.7.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "postcss-nested": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-rem": "^1.1.4",
    "posthtml-include": "^1.3.2",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0"
  },
  "dependencies": {
    "tailwindcss": "^1.1.4"
  },
  "browserslist": "> 0.25%, not dead",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {},
    "ignorePatterns": [
      "tailwind.config.js"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 2,
      "at-rule-no-unknown": [true, {
        "ignoreAtRules": [
          "screen",
          "apply"
        ]
      }],
      "string-quotes": "single",
      "no-duplicate-selectors": true,
      "color-hex-case": "lower",
      "color-hex-length": "short",
      "color-named": "never",
      "selector-no-qualifying-type": true,
      "selector-combinator-space-after": "always",
      "selector-attribute-quotes": "always",
      "selector-attribute-operator-space-before": "never",
      "selector-attribute-operator-space-after": "never",
      "selector-attribute-brackets-space-inside": "never",
      "declaration-block-trailing-semicolon": "always",
      "declaration-colon-space-before": "never",
      "declaration-colon-space-after": "always",
      "number-leading-zero": "always",
      "function-url-quotes": "always",
      "font-weight-notation": "numeric",
      "font-family-name-quotes": "always-where-recommended",
      "comment-whitespace-inside": "always",
      "comment-empty-line-before": ["always", {
        "ignore": [
          "after-comment",
          "stylelint-commands"
        ]
      }],
      "rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "after-comment",
            "first-nested",
            "inside-block"
          ]
        }
      ],
      "selector-pseudo-element-colon-notation": "double",
      "selector-pseudo-class-parentheses-space-inside": "never",
      "media-feature-range-operator-space-before": "always",
      "media-feature-range-operator-space-after": "always",
      "media-feature-parentheses-space-inside": "never",
      "media-feature-colon-space-before": "never",
      "media-feature-colon-space-after": "always"
    },
    "ignoreFiles": []
  }
}
